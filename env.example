# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/jarvis_phone
REDIS_URL=redis://localhost:6379/0

# Telephony Provider Configuration
PROVIDER=twilio  # or telnyx
PHONE_NUMBER=+15551234567

# Twilio Configuration (Primary - reliable and feature-rich)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+15551234567
TWILIO_WEBHOOK_SECRET=your_twilio_webhook_secret_here

# Telnyx Configuration (Fallback - cheaper than Twilio)
TELNYX_API_KEY=your_telnyx_api_key_here
TELNYX_PHONE_NUMBER=+15551234567
TELNYX_WEBHOOK_SECRET=your_telnyx_webhook_secret_here

# AI Provider Configuration
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google API Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback

# Application Configuration
SECRET_KEY=your_secret_key_here
DEBUG=true
LOG_LEVEL=INFO
BASE_URL=http://localhost:8000

# External Service Configuration
SLACK_BOT_TOKEN=your_slack_bot_token_here
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# Feature Flags
ENABLE_PROACTIVE_MODE=true
ENABLE_OUTBOUND_CALLS=true
ENABLE_PERSISTENT_WAKEUP=true
ENABLE_DAILY_DIGEST=true

# Proactive Mode Settings
PROACTIVE_CHECK_INTERVAL=300
EMAIL_AUTO_REPLY_ENABLED=true
CALENDAR_CONFLICT_DETECTION=true

# Outbound Call Settings
MAX_CALL_DURATION=600
CALL_RETRY_ATTEMPTS=3
CALL_RETRY_DELAY=60

# Wake-up Call Settings
WAKEUP_CALL_RETRY_ATTEMPTS=5
WAKEUP_CALL_RETRY_DELAY=300
WAKEUP_SMS_FALLBACK=true

# Digest Settings
DIGEST_SEND_TIME=08:00
DIGEST_MAX_EMAILS=5
DIGEST_MAX_EVENTS=3

# Audit & Analytics Settings
AUDIT_LOG_RETENTION_DAYS=90
ENABLE_COST_TRACKING=true
ENABLE_TIME_SAVINGS_TRACKING=true

# Pluto Memory and Learning Settings
PLUTO_MEMORY_ENABLED=true
PLUTO_HABIT_LEARNING_ENABLED=true
PLUTO_PROACTIVE_ENABLED=true
PLUTO_MEMORY_RETENTION_DAYS=365
PLUTO_HABIT_CONFIDENCE_THRESHOLD=0.6
PLUTO_PROACTIVE_FREQUENCY_HOURS=6

# Redis Settings
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
