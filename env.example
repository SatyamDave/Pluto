# =============================================================================
# AI Identity Platform - Environment Configuration
# =============================================================================

# =============================================================================
# Database Configuration
# =============================================================================
DATABASE_URL="postgresql://username:password@localhost:5432/ai_identity"
REDIS_URL="redis://localhost:6379"

# =============================================================================
# Authentication (OAuth)
# =============================================================================
# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# GitHub OAuth
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"

# LinkedIn OAuth (for future use)
LINKEDIN_CLIENT_ID="your-linkedin-client-id"
LINKEDIN_CLIENT_SECRET="your-linkedin-client-secret"

# =============================================================================
# AI & LLM Configuration
# =============================================================================
OPENAI_API_KEY="your-openai-api-key"
ANTHROPIC_API_KEY="your-anthropic-api-key"  # Alternative to OpenAI
AI_MODEL="gpt-4"  # or "claude-3-sonnet"

# =============================================================================
# External API Keys
# =============================================================================
# GitHub API (for enhanced data access)
GITHUB_ACCESS_TOKEN="your-github-personal-access-token"

# LinkedIn API (for future use)
LINKEDIN_ACCESS_TOKEN="your-linkedin-access-token"

# Plaid (for Financial Identity Card - future)
PLAID_CLIENT_ID="your-plaid-client-id"
PLAID_SECRET="your-plaid-secret"

# =============================================================================
# Application Configuration
# =============================================================================
NEXTAUTH_SECRET="your-nextauth-secret-key"
NEXTAUTH_URL="http://localhost:3000"

# JWT Configuration
JWT_SECRET="your-jwt-secret-key"
JWT_EXPIRES_IN="7d"

# =============================================================================
# File Storage
# =============================================================================
# AWS S3 (for file uploads)
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="ai-identity-uploads"

# =============================================================================
# Email Configuration
# =============================================================================
# SendGrid (for email notifications)
SENDGRID_API_KEY="your-sendgrid-api-key"
FROM_EMAIL="noreply@aiidentity.com"

# =============================================================================
# Monitoring & Analytics
# =============================================================================
# Sentry (for error tracking)
SENTRY_DSN="your-sentry-dsn"

# Google Analytics
GA_TRACKING_ID="your-ga-tracking-id"

# =============================================================================
# Development Configuration
# =============================================================================
NODE_ENV="development"
DEBUG="true"
LOG_LEVEL="debug"

# =============================================================================
# Feature Flags
# =============================================================================
ENABLE_FINANCIAL_CARD="false"
ENABLE_CREATOR_CARD="false"
ENABLE_CIVIC_CARD="false"
ENABLE_BLOCKCHAIN_VERIFICATION="false"

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_WINDOW="15m"
RATE_LIMIT_MAX_REQUESTS="100"

# =============================================================================
# Security
# =============================================================================
CORS_ORIGIN="http://localhost:3000"
ALLOWED_HOSTS="localhost,127.0.0.1"
